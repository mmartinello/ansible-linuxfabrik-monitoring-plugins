/*
Commands and services for 'needs-restarting' check from LinuxFabrik Monitoring Plugin:

a day or after applying updates only.

Code at:
https://github.com/Linuxfabrik/monitoring-plugins/tree/main/check-plugins/needs-restarting
*/

object CheckCommand "_linuxfabrik_needs_restarting" {
    command = [ "{{ linuxfabrik_monitoring_plugins_dest_path }}/needs-restarting" ]

    arguments = {
        "--help" = {
            set_if = "$linuxfabrik_needs_restarting_help$"
            description = "show this help message and exit"
        }
        "--version" = {
            set_if = "$linuxfabrik_needs_restarting_version$"
            description = "show program's version number and exit"
        }
    }
}