/*
Commands and services for 'xca-cert' check from LinuxFabrik Monitoring Plugin:

Checks expiration date of certificates in a XCA based MySQL/MariaDB database.

Code at:
https://github.com/Linuxfabrik/monitoring-plugins/tree/main/check-plugins/xca-cert
*/

object CheckCommand "_linuxfabrik_xca_cert" {
    command = [ "{{ linuxfabrik_monitoring_plugins_dest_path }}/xca-cert" ]

    arguments = {
        "--help" = {
            set_if = "$linuxfabrik_xca_cert_help$"
            description = "show this help message and exit"
        }
        "--version" = {
            set_if = "$linuxfabrik_xca_cert_version$"
            description = "show program's version number and exit"
        }
        "--critical" = {
            value = "$linuxfabrik_xca_cert_critical$"
            description = "Set the critical for the expiration date in days. Default: 5"
        }
        "--database" = {
            value = "$linuxfabrik_xca_cert_database$"
            description = "Set the MySQL database running the XCA database. Default: xca"
        }
        "--hostname" = {
            value = "$linuxfabrik_xca_cert_hostname$"
            description = "Set the hostname of the MySQL server running the XCA database. Default: localhost"
        }
        "--password" = {
            value = "$linuxfabrik_xca_cert_password$"
            description = "Set the password for the MySQL server running the XCA database. Default:"
        }
        "--prefix" = {
            value = "$linuxfabrik_xca_cert_prefix$"
            description = "Set the table prefix of the XCA database."
        }
        "--username" = {
            value = "$linuxfabrik_xca_cert_username$"
            description = "Set the username for the MySQL server running the XCA database. Default: root"
        }
        "--warning" = {
            value = "$linuxfabrik_xca_cert_warning$"
            description = "Set the warning for the expiration date in days. Default: 14"
        }
    }
}